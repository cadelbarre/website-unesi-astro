---
import Footer from "../components/TheFooter/Footer.astro";
import Head from "../components/TheHeader/Head.astro";
import Navbar from "../components/TheHeader/Navbar.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Head />
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	.wrapper {
		@apply xl:container mx-auto;
	}
	.section {
		@apply py-12;
	}
	.title {
		@apply text-[#03588C] font-bold text-4xl tracking-tight;
	}
	.subtitle {
		@apply font-light text-blue-400 italic text-lg;
	}
	p {
		color: #696969;
		font-weight: 300;
		line-height: 1.6;
		@apply pb-3 last:pb-0;
	}
</style>
